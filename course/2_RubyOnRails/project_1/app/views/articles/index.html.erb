
<h1>Articles listing page</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <%
    row = 1
    @articles.each do |article| %>    
    <tr>
      <th scope="row"><%= row %></th>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= button_to 'Show', article_path(article.id), method: :get,class:"btn btn-primary" %></td>
      <td><%= button_to 'Update', "/articles/#{article.id}/edit", method: :get,class:"btn btn-warning" %></td>
      <td><%= button_to 'Delete', article_path(article.id), method: :delete, class:"btn btn-danger" %></td>
    </tr>
    <% row += 1 %>
    <% end %>
  </tbody>
</table>
<p>Add a new article</p>
<%= button_to 'Add', new_article_path, method: :get, class:"btn btn-success" %>

